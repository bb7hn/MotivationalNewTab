{
    "name": "Motivational New Tab",
    "version": "1.0",
    "description": "Get motivated in every new tab",
    "chrome_url_overrides" : {
      "newtab": "index.html"
    },
    "background": {
      "scripts": ["js/background.js"],
      "persistent": false
    },
    "icons": { "16": "img/icon16.png",
      "48": "img/icon48.png",
     "128": "img/icon128.png" },
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Motivational New Tab"
    },
    "manifest_version": 2
  }